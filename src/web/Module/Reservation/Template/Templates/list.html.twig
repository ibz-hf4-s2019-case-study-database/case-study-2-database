{% extends "backendLayout.html.twig" %}

{% block head %}
    {{ parent() }}
    <title>Reservation</title>
{% endblock %}
{% block content %}
    <section class="container">
        <div class="row">
            <div class="col-12">
                <h1>Reservation</h1>
                <a href="index.php?module=reservation&controller=reservation&action=newReservation">Neue Reservation</a>
                <table class="table table-striped table-dark">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Datum</th>
                            <th scope="col">Firma</th>
                            <th scope="col">Stadt</th>
                            <th scope="col">Stand</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        {% for reservation in reservations %}  
                            <tr>
                                <th>{{ reservation.uid|e }}</th>
                                <th>{{ reservation.date|e }}</th>
                                <th>{{ reservation.company|e }}</th>
                                <th>{{ reservation.city|e }}</th>
                                <th>{{ reservation.site|e }}</th>
                            </tr>                   
                        {% endfor %}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}